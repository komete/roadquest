<% provide(:title, 'Travaux') %>
<section>
  <div class="container">
    <div class="page-header">
      <div class="container center">
        <h3 class="session">Liste des marquages</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <p id="notice"><%= notice %></p>

        <table>
          <thead>
          <tr>
            <th>Type de marquage</th>
            <th>Couleur</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @marquages_lineaires.each do |marquage| %>
              <tr>
                <td><%= marquage.type_marquage %></td>
                <td><%= marquage.couleur %></td>
                <td><%= link_to 'Montrer', marquage %></td>
              </tr>
          <% end %>
          <% @marquages_specialises.each do |marquage| %>
              <tr>
                <td><%= marquage.type_marquage %></td>
                <td><%= marquage.couleur %></td>
                <td><%= link_to 'Montrer', marquage %></td>
              </tr>
          <% end %>
          </tbody>
        </table>

        <br>
      </div>
    </div>
  </div>
</section>



