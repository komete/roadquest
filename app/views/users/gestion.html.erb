<div class="container">
  <div class="wrapper">
    <!-- header section -->
    <header class="header">

      <div class="headerContent">
        <h1>Page administrateur du système</h1>
      </div>
    </header>
  </div>
  <div class="content">
    <div class="clear"></div>
    <h2 align="center">Liste des utilisateurs</h2>
    <hr class="pageTitle">
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead>
      <tr>
        <th>Numéro employé</th>
        <th>Nom</th>
        <th>Prenoms</th>
        <th>Émail</th>
        <th>Poste</th>
        <th>Actif</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tfoot>
      <tr>
        <th>Numéro employé</th>
        <th>Nom</th>
        <th>Prenoms</th>
        <th>Émail</th>
        <th>Poste</th>
        <th>Actif</th>
        <th>Actions</th>
      </tr>
      </tfoot>
      <tbody align="center">
      <% @users.each do |user| %>
          <tr>
            <td><%= user.codeEmploye %></td>
            <td><%= user.nom %></td>
            <td><%= user.prenom %></td>
            <td><%= user.email %></td>
            <td><%= user.poste %></td>
            <td><%= user.verified %></td>
            <td><%= link_to raw('<i class="fa fa-pencil" style="color: green; font-size: 20px;"></i>'), edit_user_path(user) %>
              <b style="color: #000; font-size: 20px;">|</b>
              <%= link_to raw('<i class="fa fa-trash-o" style="color: red; font-size: 20px;"></i>'), user, method: :delete %>
              <b style="color: #000; font-size: 20px;">|</b>
              <%= link_to raw('<i class="fa fa-check" style="color: #005ce6;font-size: 20px;"></i>'), user, method: :put %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function () {
    $('#example').DataTable();
  });
</script>