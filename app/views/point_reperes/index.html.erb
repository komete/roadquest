<% provide(:title, 'Repères') %>
<section>
  <div class="container">
    <div class="page-header">
      <div class="container center">
        <h3 class="session">Liste des points de repère</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">

        <p id="notice"><%= notice %></p>

        <h1>Listing Point Reperes</h1>

        <table>
          <thead>
          <tr>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Projection</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @point_reperes.each do |point_repere| %>
              <tr>
                <td><%= point_repere.latitude %></td>
                <td><%= point_repere.longitude %></td>
                <td><%= point_repere.projection %></td>
                <td><%= link_to 'Visualiser', point_repere %></td>
                <td><%= link_to 'Éditer', edit_point_repere_path(point_repere) %></td>
                <td><%= link_to 'Supprimer', point_repere, method: :delete, data: { confirm: 'Êtes-vous sûr?' } %></td>
              </tr>
          <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'Nouveau point de repere', new_point_repere_path %>
      </div>
    </div>
  </div>
</section>

