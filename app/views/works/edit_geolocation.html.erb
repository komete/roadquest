<% provide(:title, 'Travaux') %>
<section>
  <div class="container">
    <div class="page-header">
      <div class="container center">
        <h3 class="session">Géolocalisation</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">

        <%= form_tag("/works/geolocation/update", method: "post") do %>

            <div class="field">
              <%= label_tag(:lon,'Longitude') %><br>
              <%= text_field_tag(:lon) %>
            </div>

            <div class="field">
              <%= label_tag(:lat, 'Latitude')%><br>
              <%= text_field_tag(:lat) %>
            </div>

            <%= hidden_field_tag(:id, @work.id) %>
            <div class="actions">
              <%= submit_tag("Géolocaliser") %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</section>