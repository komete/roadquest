<% if @produit.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        Attention ! Les informations saisies ne sont pas correctes ...
      </div>
      <ul>
        <% @produit.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>