<% provide(:title, 'Appel d\'offres') %>
<div class="container">
  <div class="wrapper">
    <!-- header section -->
    <header class="header">
      <div class="headerContent">
      </div>
    </header>
  </div>
  <div class="content">
    <div class="clear"></div>
    <h2 align="center">Portail des appels d'offres</h2>
    <hr class="pageTitle">
    <% if logged_cadre%>
      <p class="center">
        <button class="btn btn-primary">
          <%= link_to "Créér une offre", new_appel_offre_path, style: "text-decoration: none; color: #fff" %>
        </button>
      </p>
    <% end %>
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="110%">
      <thead>
      <tr>
        <th>Date</th>
        <th>Budget</th>
        <th>Déscription</th>
        <th>Période</th>
        <th>Document</th>
        <th>Entrepreneur</th>
        <th>Visualiser</th>
      </tr>
      </thead>
      <tfoot>
      <tr>
        <th>Date</th>
        <th>Budget</th>
        <th>Déscription</th>
        <th>Période</th>
        <th>Document</th>
        <th>Entrepreneur</th>
        <th>Visualiser</th>
      </tr>
      </tfoot>
      <tbody align="center">
      <% @appels.each do |appel| %>
          <tr>
            <td><%= appel.date %></td>
            <td><%= appel.budget %></td>
            <td><%= appel.description %></td>
            <td><%= appel.periode %></td>
            <td><%= link_to'Récapitulatif', appel.document_annexe_url %></td>
            <% if appel.assigned? %>
              <td><%= appel.entrepreneur_id %></td>
            <% else %>
               <td>Non attribué</td>
            <% end %>
            <td><%= link_to 'Montrer', appel %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function () {
    $('#example').DataTable();
  });
</script>