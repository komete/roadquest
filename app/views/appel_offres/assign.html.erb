<% provide(:title, 'Attribuer') %>
<section>
  <div class="container">
    <div class="wrapper">
      <!-- header section -->
      <header class="header">
        <div class="headerContent">
        </div>
      </header>
    </div>
    <div class="content">
      <div class="clear"></div>
      <h2 align="center">Portail des entrepreneurs</h2>
      <hr class="pageTitle">
      <table id="example" class="table table-striped table-bordered" cellspacing="0" width="110%">
        <thead>
        <tr>
          <th>Entreprise</th>
          <th>Action</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
          <th>Entreprise</th>
          <th>Action</th>
        </tr>
        </tfoot>
        <tbody align="center">
        <% @entrepreneurs.each do |entrepreneur| %>
            <tr>
              <td><%= entrepreneur.ref_entreprise %></td>
              <td><%= link_to 'Assigner', {controller: "appel_offres", action: "to_assign", entrepreneur_id: entrepreneur.id} %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
<script type="text/javascript">
  $(document).ready(function () {
    $('#example').DataTable();
  });
</script>